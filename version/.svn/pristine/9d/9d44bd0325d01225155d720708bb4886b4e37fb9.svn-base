//加载模态框的数据
function reloadModelData(url,title,btntext,id,position,phone,email,requirements,starttime,endtime,level,projectId,type){
	$("#userModal #usermodelHead").text(title);
	$("#userModal #imgSubmit").text(btntext);
	$("input[name='url']").val(url);
	$("input[name='id']").val(id);
	$("input[name='position']").val(position);
	$("input[name='phone']").val(phone);
	$("input[name='email']").val(email);
	$("input[name='requirements']").val(requirements);
	if(starttime==null){$("input[name='starttime']").val('');}else{
        $("input[name='starttime']").val(starttime);
	}
    if(endtime==null){$("input[name='endtime']").val('');}else{
        $("input[name='endtime']").val(endtime);
	}
    $("input[name='projectId']").val(projectId);
    $("#menuModal [name='level']").val(level);
}

