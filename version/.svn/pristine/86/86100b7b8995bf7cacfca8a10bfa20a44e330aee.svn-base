                return ResponseModel.getModel("你请求的是一个冒牌接口", "failed", null);
            }
            integralItemMapper.deleteByPrimaryKey(id);
        } catch (Exception e) {
            TransactionAspectSupport.currentTransactionStatus().setRollbackOnly();
