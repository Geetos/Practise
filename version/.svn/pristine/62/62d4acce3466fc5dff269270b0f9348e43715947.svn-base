<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head th:include="include/css-head :: css-head">
</head>
<style>
    textarea{
        width:100%;
        height:100px;
    }

    .file {
        position: relative;
        display: inline-block;
        background: #D0EEFF;
        border: 1px solid #99D3F5;
        border-radius: 4px;
        padding: 4px 12px;
        overflow: hidden;
        color: #1E88C7;
        text-decoration: none;
        text-indent: 0;
        line-height: 20px;
    }
    .file input {
        position: absolute;
        font-size: 100px;
        right: 0;
        top: 0;
        opacity: 0;
    }
    .file:hover {
        background: #AADFFD;
        border-color: #78C3F3;
        color: #004974;
        text-decoration: none;
    }

    .chk_1{
        display: none;
    }
    .chk_1 + label {
        background-color: #FFF;
        border: 1px solid #C1CACA;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px -15px 10px -12px rgba(0, 0, 0, 0.05);
        padding: 9px;
        border-radius: 5px;
        display: inline-block;
        position: relative;
        margin-right: 30px;
    }
    .chk_1 + label:active {
        box-shadow: 0 1px 2px rgba(0,0,0,0.05), inset 0px 1px 3px rgba(0,0,0,0.1);
    }

    .chk_1:checked + label {
        background-color: #ECF2F7;
        border: 1px solid #92A1AC;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px -15px 10px -12px rgba(0, 0, 0, 0.05), inset 15px 10px -12px rgba(255, 255, 255, 0.1);
        color: #243441;
    }

    .chk_1:checked + label:after {
        content: '\2714';
        position: absolute;
        top: 0px;
        left: 0px;
        color: #758794;
        width: 100%;
        text-align: center;
        font-size: 1.4em;
        padding: 1px 0 0 0;
        vertical-align: text-top;
    }
    div.cbp label.font{
        text-align: center;
        font-size: 1.4em;
        vertical-align: text-top;
        margin-top: -15px;
        margin-left: -10px;
    }
    #ProjList{
        display:
        overflow-scrolling: auto;
        position: absolute;
    }
</style>
<body>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        西游记告诉我们：凡是有后台的妖怪都被接走了，
        <small>凡是没后台的都被一棒子打死了</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 系统管理</a></li>
        <li class="active">提成管理</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">提成列表</h3>
            <br><br>
            <button th:if="${QX.add == '1' && QX.query == '1'}" class="btn btn-success btn-sm" id="addPercentage"><i class="fa fa-plus"></i> &nbsp;&nbsp;添加提成</button>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="percentList" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>序号</th>
                    <th>项目名称</th>
                    <th>分配金额（元）</th>
                    <th>备注说明</th>
                    <th>项目进度</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                <tr th:if="${QX.query == '1'}" th:each="xmpercentage,stat :${xmlist}">
                    <td th:text="${stat.count}">1</td>
                    <td th:text="${xmpercentage.projectId}">项目ID</td>
                    <td th:text="${xmpercentage.commissionMoney}">分配金额</td>
                    <td th:text="${xmpercentage.reason}">说明</td>
                    <td th:text="${xmpercentage.process}">进度</td>
                    <td>
                        <span data-toggle="tooltip" th:if="${QX.edit == '1'}" title="编辑提成"  class="btn btn-xs btn-info"
                              th:onclick="'editPercentage(\''+${xmpercentage.commissionMoney}+'\',\''+${xmpercentage.projectId}+'\',\''+${xmpercentage.reason}+'\',\''+${xmpercentage.process}+'\',\''+${xmpercentage.id}+'\');'"><i class="fa fa-edit"></i>编辑 </span>
                        <span data-toggle="tooltip" th:if="${QX.query == '1'}" title="查看提成明细"
                        class="btn btn-xs btn-warning"  th:onclick="'selectDetail(\''+${xmpercentage.id}+'\');'"><i class="fa fa-rmb"></i> 查看</span>
                        <span data-toggle="tooltip" title="删除提成" th:if="${QX.del == '1'}" th:onclick="'delPercentage(\''+${xmpercentage.id}+'\');'" class="btn btn-xs btn-danger" ><i class="fa fa-rmb"></i> 删除</span>
                        <span data-toggle="tooltip" title="权限不够"
                              th:unless="${QX.edit == '1' || QX.add == '1' || QX.del == '1'}"><i
                                class="fa fa-lock"></i> </span>
                    </td>
                </tr>
                <tr th:unless="${QX.query == '1'}" >
                    <td colspan="7" align="center">
                        <h2>此用户无权限查看该页面</h2>
                    </td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>
</section>
<div class="modal fade" id="percentModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center" id="usermodelHead">添加提成</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal"  role="form" action="/percentage/add" method="get">
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="commissionMoney" class="col-sm-2 control-label">分配金额</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="commissionMoney" value=""
                                           id="commissionMoney" placeholder="分配金额">

                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="projectId" class="col-sm-2 control-label">项目ID
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="projectId" value=""
                                           id="projectId"  placeholder="项目ID">
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="reason" class="col-sm-2 control-label">未分配原因</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="reason" value=""
                                           id="reason" placeholder="未分配原因">
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                    <td>
                        <div class="form-group">
                            <label for="process" class="col-sm-2 control-label">项目进度
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="process" value=""
                                       id="process"  placeholder="进度">
                            </div>
                        </div>
                    </td>
                    </tr>
                    <!--分配金额：<input type="text" name="" value=""/>-->
                    <input type="hidden" id="project_id" name="project_id" value=""/><br>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primary" data-dismiss="modal" th:value="关闭"></input>
                        <input type="submit" class="btn btn-success"  id="Submit" th:value="确定"></input>
                    </div>
                </form>
            </div>
            <!--<div class="modal-footer">-->
                <!--<button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>-->
                <!--<button type="submit" class="btn btn-success"  id="Submit" >确定</button>-->
            <!--</div>-->
        </div>
    </div>
</div>
<div class="modal fade" id="percentupDateModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center" id="usermodelHead">修改提成</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal"  role="form">
                    <input type="hidden" name="id1" value=""/>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="commissionMoney1" class="col-sm-2 control-label">分配金额</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="commissionMoney1" value=""
                                           id="commissionMoney1" placeholder="分配金额">

                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="projectId1" class="col-sm-2 control-label">项目ID
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="projectId1" value=""
                                           id="projectId1"  placeholder="项目ID">
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="reason1" class="col-sm-2 control-label">未分配原因</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="reason1" value=""
                                           id="reason1" placeholder="未分配原因">
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <label for="process1" class="col-sm-2 control-label">项目进度
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="process1" value=""
                                           id="process1"  placeholder="进度">
                                </div>
                            </div>
                        </td>
                    </tr>
                </form>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>
            <button type="button" class="btn btn-success"  id="insubmit" >确定</button>
            </div>
        </div>
    </div>
</div>
<script th:src="@{/bower_components/jquery/dist/jquery.min.js}"></script>
<script th:src="@{/bower_components/bootstrap/dist/js/bootstrap.min.js}"></script>
<script th:src="@{/bower_components/datatables.net/js/jquery.dataTables.min.js}"></script>
<script th:src="@{/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js}"></script>
<script th:src="@{/ztree/js/jquery.ztree.core.js}"></script>
<script th:src="@{/ztree/js/jquery.ztree.excheck.min.js}"></script>
<!-- AdminLTE App -->
<script th:src="@{/dist/js/adminlte.min.js}"></script>
<script th:src="@{/js/path.js}"></script>
<script th:inline="javascript">
    $(function() {
        //提示框
        $("[data-toggle='tooltip']").tooltip();
        //表格分页
        $('#percentList').DataTable({
            "scrollX": true,
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            "pagingType": "full_numbers",
            "pageLength": 10,
            "oLanguage": {
                "sLengthMenu": "每页显示 _MENU_ 条记录",
                "sZeroRecords": "对不起，查询不到任何相关数据",
                "sInfo": "当前显示 _START_ 到 _END_ 条，共 _TOTAL_条记录",
                "sInfoEmtpy": "找不到相关数据",
                "sInfoFiltered": "数据表中共为 _MAX_ 条记录)",
                "sProcessing": "正在加载中...",
                "sSearch": "搜索",
                "oPaginate": {
                    "sFirst": "第一页",
                    "sPrevious": " 上一页 ",
                    "sNext": " 下一页 ",
                    "sLast": " 最后一页 "
                },
            }
        });

        // $("#project_name").click(function () {
        //     $("#projModel").show();
        // });


    });
    $("#addPercentage").click(function () {
        $("#percentModal").modal("show");
    });
    $("#insubmit").click(function(){
        var projectId = $("input[name='projectId1']").val();
        var commissionMoney = $("input[name='commissionMoney1']").val();
        var reason = $("input[name='reason1']").val();
        var process = $("input[name='process1']").val();
        var id = $("input[name='id1']").val();
        $.ajax({
            type:"post",
            url:_ctx + "/percentage/edit",
            cache:false,
            dataType:"json",
            //contentType:"application/json",
            data:{id:id,project_id:projectId,commission_money:commissionMoney,reason:reason,process:process},
            success:function(data){
                if(data.status == 'success'){
                    $("#percentupDateModal").modal("hide");
                    window.location.href=window.location.href;
                }else{
                    alert(data.msg);
                    $("#percentupDateModal").modal("hide");
                }
            }
        });
    });
    function delPercentage(id) {
        if (confirm("你确定要删除此提成信息吗？")) {
            $.ajax({
                type: "GET",
                url: _ctx + "/percentage/del/"+ id,
                dataType: "json",
                // data: {id: id},
                cache: false,
                success: function (data) {
                    if (data.status == 'success') {
                        window.location.href = window.location.href;
                    } else {
                        alert(data.msg);
                    }
                }
            });
        }
    }
    function standarddayyModelData(projectId,commissionMoney,reason,process,id){
        $("input[name='projectId1']").val(projectId);
        $("input[name='commissionMoney1']").val(commissionMoney);
        $("input[name='reason1']").val(reason);
        $("input[name='process1']").val(process);
        $("input[name='id1']").val(id);

    }
    function selectDetail(percentageId) {
        window.location.href = _ctx + "/xmpercentageItem/list/" + percentageId;
    }

    function editPercentage(commissionMoney,projectId,reason,process,id){
        standarddayyModelData(projectId,commissionMoney,reason,process,id);
        $("#percentupDateModal").modal("show");
    }
</script>


</body>
</html>