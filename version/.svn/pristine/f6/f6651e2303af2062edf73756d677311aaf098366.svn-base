    $("#addProcurementitem").click(function () {
        reloadModelData(_ctx + "/communication/add", "添加项目沟通计划", "添加","", "", "", "", "","", "", "", "","add");
        $("#userModal").modal("show");
    });

    //确认按钮
    $("#imgSubmit").click(function () {
        var url = $("input[name='url']").val();
        var id = $("input[name='id']").val();
        /*var projectId = sessionStorage.getItem("procurementprojectid");*/
        var projectId = $("input[name='projectId']").val();
        var userId = $("input[name='userId']").val();
        var comtype = $("input[name='comtype']").val();
        var comuser = $("input[name='comuser']").val();
        var comtime = $("input[name='comtime']").val();
        var materialform = $("input[name='materialform']").val();
        var comway = $("input[name='comway']").val();
        var receivingstaf = $("input[name='receivingstaf']").val();
        var file =  $("#cert")[0].files[0];
        var formData = new FormData();
        formData.append('id',id);
        formData.append('projectId',projectId);
        formData.append('userId',userId);
        formData.append('comtype',comtype);
        formData.append('comuser',comuser);
        formData.append('comtime',comtime);
        formData.append('materialform',materialform);
        formData.append('comway',comway);
        formData.append('receivingstaf',receivingstaf);
        formData.append('file',file);
        $.ajax({
            type: "POST",           //因为是传输文件，所以必须是post
            url: url,         //对应的后台处理类的地址
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            dataType: "json",
            success: function (data) {
                if (data.status == 'success') {
                    $("#userModal").modal("hide");
                    window.location.href = window.location.href;
                } else {
                    alert(data.msg);
                }
            }
        });
        /* if (url == _ctx + '/user/add') {
             if (!checkAccount(username, nickName, password)) {
                 return false;
             }
         }*/

        /*$.ajax({
            type: "post",
            url: url,
            cache: false,
            dataType: "json",
            data: {
                id: id,
                projectId: projectId,
                userId: userId,
                comtype: comtype,
                comtime: comtime,
                comuser: comuser,
                materialform: materialform,
                comway: comway,
                receivingstaf: receivingstaf,
                file:file,
                time: new Date().getTime()
            },
            success: function (data) {
                if (data.status == 'success') {
                    $("#userModal").modal("hide");
                    window.location.href = window.location.href;
                } else {
                    alert(data.msg);
                }
            }
        });*/
    });

    //删除项目
    function delProcurementitem(id) {
        if (confirm("你确定要删除此项目吗？")) {
            $.ajax({
                type: "GET",
                url: _ctx + "/communication/del/" + id,
                dataType: "json",
                data: {time: new Date().getTime()},
                cache: false,
                success: function (data) {
                    if (data.status == 'success') {
                        window.location.href = window.location.href;
                    } else {
                        alert(data.msg);
                    }
                }
            });
        }
    }

    //编辑项目,
    function editProcurementitem(id, projectId, userId, comtype, comtime,comuser, materialform, comway, receivingstaf) {
        reloadModelData(_ctx + "/communication/edit", "编辑项目实际进度", "更新", id, projectId, userId, comtype, comtime,comuser, materialform, comway, receivingstaf, "edit");
        $("#userModal").modal("show");
    }

    //验证数据
    function checkAccount(username, nickName, password) {
        if (username == '') {
            $("input[name='username']").focus();
            alert("用户名不能为空");
            return false;
        }
        if (nickName == '') {
            $("input[name='nick_name']").focus();
            alert("昵称不能为空");
            return false;
        }
        if (password == '') {
            $("input[name='password']").focus();
            alert("密码不能为空");
            return false;
        } else if (password.length < 4) {
            $("input[name='password']").focus();
            alert("密码个数不能少于4位");
            return false;
        }
        return true;
    }

    //加载模态框的数据
    function reloadModelData(url, title, btntext,id, projectId, userId, comtype, comtime,comuser, materialform, comway, receivingstaf, type) {
        $("#userModal #usermodelHead").text(title);
        $("#userModal #imgSubmit").text(btntext);
        $("input[name='url']").val(url);
        $("input[name='id']").val(id);
        $("input[name='projectId']").val(projectId);
        $("input[name='userId']").val(0);
        $("input[name='comtype']").val(comtype);
        $("input[name='comuser']").val(comuser);
        $("input[name='materialform']").val(materialform);
        $("input[name='comway']").val(comway);
        $("input[name='receivingstaf']").val(receivingstaf);
        if(type=='edit') {
            $("input[name='comtime']").val(new Date(comtime).format("yyyy-MM-dd"));
        }else{
            $("input[name='comtime']").val('');

        }
    }

</script>
